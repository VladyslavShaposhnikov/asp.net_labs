@model Dictionary<int, Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>List of books</h2>
<a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Create">Create Book</a>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach(var item in @Model)
    {
        <tr>
            <td>
                @item.Value.Title
            </td>
            <td>
                @item.Value.Author
            </td>
            <td>
                <a class="btn btn-info"
                   asp-action="Edit"
                   asp-controller="Book"
                   asp-route-id=@item.Value.Id>Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Book"
                   asp-route-id=@item.Value.Id>Szczegóły</a>
                <a class="btn btn-danger"
                   asp-action="Delete"
                   asp-controller="Book"
                   asp-route-id=@item.Value.Id>Usuń</a>
            </td>
        </tr>
    }
</table>