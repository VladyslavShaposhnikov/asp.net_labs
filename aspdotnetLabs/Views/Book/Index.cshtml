@model List<Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>List of books</h2>
<a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Create">Create Book</a>
@if (Model.Count > 0)
{
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Category)
            </th>
            <th>
                Actions
            </th>
        </tr>
        @foreach(var item in @Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Author
                </td>
                <td>
                    @item.Category.GetDisplayName()
                </td>
                <td>
                    <a class="btn btn-info"
                       asp-action="Edit"
                       asp-controller="Book"
                       asp-route-id=@item.Id>Edytuj</a>
                    <a class="btn btn-primary"
                       asp-action="Details"
                       asp-controller="Book"
                       asp-route-id=@item.Id>Szczegóły</a>
                    <a class="btn btn-danger"
                       asp-action="Delete"
                       asp-controller="Book"
                       asp-route-id=@item.Id>Usuń</a>
                </td>
            </tr>
        }
    </table>
}